<div class="container">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mb-0">Assessments</h1>
      <p class="text-muted mb-0">All security assessment packages</p>
    </div>
  </div>

  <div class="card">
    <div class="card-body p-0">
      {{#if assessments.length}}
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead>
              <tr>
                <th>Project</th>
                <th>Type</th>
                <th>Status</th>
                <th>Score</th>
                <th>Result</th>
                <th>Invite Code</th>
                <th>Created</th>
                <th>Updated</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {{#each assessments}}
                <tr>
                  <td class="fw-semibold">{{this.project_name}}</td>
                  <td class="text-capitalize">{{this.type}}</td>
                  <td>{{{statusBadge this.status}}}</td>
                  <td>
                    {{#if this.overall_score}}
                      <span class="fw-bold {{#ifCond this.overall_score '>=' 80}}text-success{{else}}text-danger{{/ifCond}}">
                        {{this.overall_score}}%
                      </span>
                    {{else}}
                      <span class="text-muted">—</span>
                    {{/if}}
                  </td>
                  <td>{{#if this.result}}{{{statusBadge this.result}}}{{else}}<span class="text-muted">—</span>{{/if}}</td>
                  <td><code class="small">{{this.invite_code}}</code></td>
                  <td class="small text-muted">{{formatDate this.created_at}}</td>
                  <td class="small text-muted">{{formatDate this.updated_at}}</td>
                  <td class="text-end text-nowrap">
                    <a href="/admin/assessments/{{this.id}}" class="btn btn-sm btn-outline-primary">
                      <i class="bi bi-eye me-1"></i>View
                    </a>
                    {{#if (eq this.status 'draft')}}
                      <form action="/admin/assessments/{{this.id}}/delete" method="POST" class="d-inline ms-1"
                        onsubmit="return confirm('Delete this draft assessment? This cannot be undone.')">
                        <input type="hidden" name="return_to" value="/admin/assessments">
                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete draft">
                          <i class="bi bi-trash"></i>
                        </button>
                      </form>
                    {{/if}}
                  </td>
                </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      {{else}}
        <div class="p-5 text-center text-muted">
          <i class="bi bi-clipboard-plus" style="font-size:3rem"></i>
          <p class="mt-3 mb-2">No assessments yet.</p>
          <p class="small">Create a project first, then start an assessment from the project detail page.</p>
          <a href="/admin/projects" class="btn btn-primary"><i class="bi bi-folder2-open me-1"></i>View Projects</a>
        </div>
      {{/if}}
    </div>
  </div>
</div>
