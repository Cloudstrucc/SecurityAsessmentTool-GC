<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-lg-5">
      <div class="text-center mb-4">
        <i class="bi bi-shield-lock-fill" style="font-size:3rem;color:var(--gc-red)"></i>
        <h2 class="mt-2" style="color:var(--gc-nav)">Assessor Login</h2>
        <p class="text-muted">Security Assessment &amp; Authorization Portal</p>
      </div>
      <div class="card">
        <div class="card-body p-4">
          <form action="/admin/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email Address</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                <input type="email" class="form-control" id="email" name="email" required autofocus placeholder="assessor@agency.gc.ca">
              </div>
            </div>
            <div class="mb-4">
              <label for="password" class="form-label">Password</label>
              <div class="input-group">
                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                <input type="password" class="form-control" id="password" name="password" required placeholder="Enter password">
              </div>
            </div>
            <button type="submit" class="btn btn-primary w-100 py-2">
              <i class="bi bi-box-arrow-in-right me-2"></i>Sign In
            </button>
          </form>
        </div>
      </div>
      <div class="text-center mt-3">
        <a href="/" class="text-muted small"><i class="bi bi-arrow-left me-1"></i>Back to Portal Home</a>
      </div>
    </div>
  </div>
</div>
